<!DOCTYPE html>
<html>
  <head>
    <title>Son Of Cod</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="jumbotron">
      <%= image_tag("logo.png", :alt => "Son of Cod Logo", class: "clearfix") %>
      <!-- <h1>Son of Cod</h1> -->
      <div class="signin clearfix">
        <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
        <% else %>
        <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
        <% end %>
      </div>
      <div class="nav clearfix">
        <%= link_to "Home", root_path %> |
        <%= link_to "Our Fish", products_path %>
      </div>
    </div>
    <div class="container">
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>
    </div>
    <footer> Copyright 2017</footer>

  </body>
</html>
